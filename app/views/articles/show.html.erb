<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @article.title %></h1>
      <%= link_to 'Back', articles_path %>
      <hr/>
      <p>
        <strong>Title:</strong>
        <%= @article.title %>
      </p>

      <p>
        <strong>Text:</strong>
        <%= @article.text %>
      </p>

      <h2>Comments</h2>
      <%= render @article.comments %>

      <h2>Add a comment:</h2>
      <%= render 'comments/form' %>

      <%= link_to 'Edit', edit_article_path(@article) %>

    </div>
  </div>
</div>
